import seaborn as sns
from sklearn.datasets import load_breast_cancer
from sklearn.model_selection import train_test_split
from sklearn.neighbors import KNeighborsClassifier
import matplotlib.pyplot as plt

breast_cancer_data = load_breast_cancer()

## Preview the data ##
# print(breast_cancer_data.data[0])
# print(breast_cancer_data.feature_names)
# print(breast_cancer_data.target)
# print(breast_cancer_data.target_names)


## Split data ##
training_data, validation_data, training_labels, validation_labels =  train_test_split(breast_cancer_data.data, breast_cancer_data.target, test_size=0.2, random_state=100)

## Initiate classifier ## 
classifier = KNeighborsClassifier(n_neighbors=3)
classifier.fit(training_data, training_labels)

## Checking accuracy of model
print(f"Classifier's score: {classifier.score(validation_data, validation_labels)}")

## Evaluating optijmal k value ##
k_list = range(1,101)
k_values = []
for k in k_list:
  classifier = KNeighborsClassifier(n_neighbors=k)
  classifier.fit(training_data, training_labels)
  k_values.append(classifier.score(validation_data, validation_labels))


plt.plot(k_list, k_values)
plt.xlabel('k')
plt.ylabel('Validation Accuracy')
plt.title('K Accuracy')
plt.show()
